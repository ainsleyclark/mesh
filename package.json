{
	"name": "mesh",
	"version": "1.0.0",
	"description": "A lightweight, pure CSS framework.",
	"scripts": {
		"dev": "vagrant up && npm run watch-css",
		"prod": "npm run prefix && npm run clean && npm run minify",
		"build-css": "./bin/build-css",
		"watch-css": "./bin/watch-css",
		"clean": "./bin/clean",
		"prefix": "./bin/prefix",
		"minify": "./bin/minify",
		"lint": "./bin/lint",
		"docker-start": "docker start mesh-php && npm run watch-css",
		"docker-stop": "docker stop mesh-php",
		"docker-create": "./bin/docker-create"
	},
	"browserslist": [
		"last 2 versions"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ainsleyclark/mesh.git"
	},
