	},
	"homepage": "https://github.com/ainsleyclark/mesh#readme",
	"devDependencies": {
		"@prettier/plugin-php": "^0.10.2",
		"autoprefixer": "^9.5.1",
		"clean-css": "^4.2.1",
		"clean-css-cli": "^4.3.0",
		"concurrently": "^4.1.0",
		"node-sass": "^4.12.0",
		"nodemon": "^1.19.0",
		"postcss-cli": "^6.1.2",
		"prettier": "^1.17.0",
		"sass-lint": "^1.13.1"
